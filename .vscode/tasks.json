    // ============================================
    // FRONTEND TASKS
    // ============================================
    {
      "label": "npm: dev - Frontend",
      "type": "npm",
      "script": "dev",
      "path": "Codigo/Frontend/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^\\s*VITE\\s+v"
          },
          "endsPattern": {
            "regexp": "^\\s*âžœ\\s+Local:\\s+http://localhost:\\d+/"
          }
        }
      }
    },
    {
